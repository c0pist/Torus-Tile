<h1>Add new product</h1>

<form action="/product/add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        Product Code <input type="text" name="code" class="form-control" placeholder="Product Code" />
    </div>
    <div class="form-group">
        Product Node <input type="text" name="name" class="form-control" placeholder="Product Name" />
    </div>
    <div class="form-group">
        Price <input type="number" name="price" class="form-control" placeholder="Price" />
    </div>
    <div class="form-group">
        Price (sqf) <input type="number" name="price_sqf" class="form-control" placeholder="Price (sqf)" />
    </div>
    <div class="form-group">
        Product Image <input type="file" name="pd_Image" class="form-control" placeholder="Product Image" />
    </div>

    <input type="submit" class="btn btn-primary" value="Add" />

</form>